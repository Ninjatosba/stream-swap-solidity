{
  "name": "streamswap-solidity",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:import": "hardhat run scripts/importAccount.ts",
    "account:export": "hardhat run scripts/exportAccount.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "check-types": "tsc --noEmit --incremental",
    "compile": "hardhat compile",
    "deploy": "ts-node scripts/runHardhatDeployWithPK.ts",
    "flatten": "hardhat flatten",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "format": "prettier --write './**/*.{ts,sol}'",
    "generate": "yarn account:generate",
    "hardhat-verify": "hardhat verify",
    "lint": "eslint './*.ts' './deploy/**/*.ts' './scripts/**/*.ts' './test/**/*.ts'",
    "lint:sol": "npx solhint 'src/**/*.sol'",
    "lint-staged": "eslint",
    "test": "REPORT_GAS=true hardhat test",
    "test:fast": "REPORT_GAS=true npx hardhat test test/unit/*.test.ts test/stream/*.test.ts test/factory/*.test.ts test/vesting/*.test.ts",
    "test:fork": "MAINNET_FORKING_ENABLED=true REPORT_GAS=true npx hardhat test test/fork/*.test.ts",
    "coverage": "hardhat coverage",
    "verify": "hardhat etherscan-verify",
    "mint-tokens": "hardhat mint-tokens",
    "subscribe": "hardhat run tasks/subscribe.ts",
    "exit-stream": "hardhat run tasks/exit-stream.ts",
    "finalize-stream": "hardhat run tasks/finalize-stream.ts",
    "create-stream": "hardhat create-stream",
    "withdraw": "hardhat withdraw",
    "upgrade-stream-implementation": "hardhat upgrade-stream-implementation",
    "update-accepted-tokens": "hardhat update-accepted-tokens",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@inquirer/password": "^4.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@typechain/ethers-v6": "~0.5.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-periphery": "^1.4.4",
    "dotenv": "~16.4.5",
    "envfile": "~7.1.0",
    "merkletreejs": "^0.6.0",
    "permit2": "github:Uniswap/permit2#main",
    "qrcode": "~1.5.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "~2.0.7",
    "@nomicfoundation/hardhat-ethers": "~3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "~1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "~2.0.10",
    "@typechain/hardhat": "~9.1.0",
    "@types/eslint": "~8.56.12",
    "@types/mocha": "~10.0.6",
    "@types/prettier": "~3.0.0",
    "@types/qrcode": "~1.5.5",
    "@typescript-eslint/eslint-plugin": "~8.8.1",
    "@typescript-eslint/parser": "~8.8.1",
    "chai": "~4.5.0",
    "eslint": "~8.57.1",
    "eslint-config-prettier": "~8.10.0",
    "eslint-plugin-prettier": "~5.2.1",
    "ethers": "~6.13.2",
    "hardhat": "^2.22.19",
    "hardhat-console": "^1.0.0",
    "hardhat-deploy": "^1.0.1",
    "hardhat-deploy-ethers": "~0.4.2",
    "hardhat-gas-reporter": "~2.2.1",
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2",
    "prettier": "~3.3.3",
    "prettier-plugin-solidity": "~1.4.1",
    "solidity-coverage": "~0.8.13",
    "ts-node": "~10.9.1",
    "typechain": "~8.3.2",
    "typescript": "<5.6.0"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.18.0"
  }
}
